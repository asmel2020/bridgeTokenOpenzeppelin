{
  "name": "swaptoken",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npx hardhat test",
    "restart": "npx hardhat clean && npx hardhat compile",
    "autoTask:brigeOracle": "yarn hardhat run scripts/openzeppelinDefender/autoTask/brigeOracle.ts",
    "autoTask:balaceVerify": "yarn hardhat run scripts/openzeppelinDefender/autoTask/balaceVerify.ts",
    "autoTask:pause-custodial-blockchain-1": "yarn hardhat run scripts/openzeppelinDefender/autoTask/pause-custodial-blockchain-1.ts",
    "autoTask:pause-custodial-blockchain-2": "yarn hardhat run scripts/openzeppelinDefender/autoTask/pause-custodial-blockchain-2.ts",
    "autoTask:unpause-custodial-blockchain-1": "yarn hardhat run scripts/openzeppelinDefender/autoTask/unpause-custodial-blockchain-1.ts",
    "autoTask:unpause-custodial-blockchain-2": "yarn hardhat run scripts/openzeppelinDefender/autoTask/unpause-custodial-blockchain-2.ts",
    "autoTask:inyectSecret": "yarn hardhat run scripts/openzeppelinDefender/autoTask/inyectSecret.ts",
    "runAutoTask:inyectSecret": "yarn hardhat run scripts/openzeppelinDefender/autoTaskRun/inyectSecret.ts",
    "relay:Bsc": "yarn hardhat run scripts/openzeppelinDefender/relay/walletBsc.ts",
    "relay:Avax": "yarn hardhat run scripts/openzeppelinDefender/relay/walletAvax.ts",
    "sentinel:sentinelBsc": "yarn hardhat run scripts/openzeppelinDefender/sentinel/sentinelBsc.ts",
    "sentinel:sentinelAvax": "yarn hardhat run scripts/openzeppelinDefender/sentinel/sentinelAvax.ts",
    "deploy:brigeBsc": "yarn hardhat run scripts/deploy/BrigeToken.ts --network bscTestnet",
    "deploy:brigeAvax": "yarn hardhat run scripts/deploy/BrigeToken.ts --network avalancheTestnet",
    "deploy:Token": "yarn hardhat run scripts/deploy/MyToken.ts --network bscTestnet",
    "deploy:WToken": "yarn hardhat run scripts/deploy/WMytoken.ts --network avalancheTestnet",
    "deploy:TokenAll": "yarn deploy:Token && yarn deploy:WToken",
    "relay:all": "yarn relay:Bsc && yarn relay:Avax",
    "deploy:brigeAll": "yarn deploy:brigeBsc && yarn deploy:brigeAvax",
    "autoTask:all": "yarn autoTask:brigeOracle && yarn autoTask:balaceVerify & yarn autoTask:pause-custodial-blockchain-1 && yarn autoTask:pause-custodial-blockchain-2 && yarn autoTask:unpause-custodial-blockchain-1 && yarn autoTask:unpause-custodial-blockchain-2 && yarn autoTask:inyectSecret",
    "sentinel:all": "yarn sentinel:sentinelBsc && yarn sentinel:sentinelAvax",
    "deploy:allSystem": "yarn relay:all && yarn deploy:brigeAll && yarn deploy:TokenAll  && yarn autoTask:all && yarn sentinel:all && yarn runAutoTask:inyectSecret"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@ethersproject/abi": "^5.6.4",
    "@ethersproject/providers": "^5.6.8",
